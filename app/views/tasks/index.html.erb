<h1>Tasks</h1>
<%= link_to "New task", new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" onclick="return false;" <%= task.completed && 'checked' %>>
      <span><%= link_to task.title, task_path(task) %></span>
      <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
